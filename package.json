{
  "name": "ioflow",
  "version": "0.3.0",
  "description": "Configurar e se conectar com as placas IO Flow",
  "settingsSchema": {
    "display": "form",
    "components": [
      {
        "label": "Sincronizar regras IO?",
        "tableView": false,
        "key": "syncIORules",
        "type": "checkbox",
        "input": true,
        "defaultValue": false
      },
      {
        "label": "Regras",
        "reorder": false,
        "addAnotherPosition": "bottom",
        "layoutFixed": false,
        "enableRowGroups": false,
        "initEmpty": false,
        "tableView": false,
        "defaultValue": [
          {
            "rule": "",
            "enable": false
          }
        ],
        "key": "rules",
        "conditional": {
          "show": true,
          "when": "syncIORules",
          "eq": "true"
        },
        "type": "datagrid",
        "input": true,
        "components": [
          {
            "label": "Regra N#",
            "mask": false,
            "tableView": false,
            "delimiter": false,
            "decimalLimit": 0,
            "requireDecimal": false,
            "inputFormat": "plain",
            "truncateMultipleSpaces": false,
            "validate": {
              "required": true,
              "min": 0,
              "max": 29
            },
            "key": "rule",
            "type": "number",
            "input": true
          },
          {
            "label": "Habilitar",
            "tableView": false,
            "key": "enable",
            "type": "checkbox",
            "input": true,
            "defaultValue": false
          },
          {
            "label": "Mínimo",
            "tooltip": "Valor mínimo para regra se ativar.",
            "mask": false,
            "tableView": false,
            "delimiter": false,
            "requireDecimal": false,
            "inputFormat": "plain",
            "truncateMultipleSpaces": false,
            "validate": {
              "required": true,
              "custom": "valid = input < row.high ? true : 'Precisa ser menor que o máximo';"
            },
            "key": "low",
            "type": "number",
            "input": true
          },
          {
            "label": "Máximo",
            "tooltip": "Valor máximo para regra se ativar (inclusivo).",
            "mask": false,
            "tableView": false,
            "delimiter": false,
            "requireDecimal": false,
            "inputFormat": "plain",
            "truncateMultipleSpaces": false,
            "validate": {
              "required": true,
              "custom": "valid = input > row.low ? true : 'Precisa ser maior que o mínimo';"
            },
            "key": "high",
            "type": "number",
            "input": true
          },
          {
            "label": "Target",
            "widget": "choicesjs",
            "tooltip": "Porta física ou virtual para ler dados.",
            "tableView": true,
            "data": {
              "values": [
                {
                  "label": "Digital 1",
                  "value": "in1"
                },
                {
                  "label": "Digital 2",
                  "value": "in2"
                },
                {
                  "label": "Digital 3",
                  "value": "in3"
                },
                {
                  "label": "Digital 4",
                  "value": "in4"
                },
                {
                  "label": "Digital 5",
                  "value": "in5"
                },
                {
                  "label": "Digital 6",
                  "value": "in6"
                },
                {
                  "label": "Contador 1",
                  "value": "int1"
                },
                {
                  "label": "Contador 2",
                  "value": "int2"
                },
                {
                  "label": "Contador 3",
                  "value": "int3"
                },
                {
                  "label": "Contador 4",
                  "value": "int4"
                },
                {
                  "label": "Contador 5",
                  "value": "int5"
                },
                {
                  "label": "Contador 6",
                  "value": "int6"
                },
                {
                  "label": "Analógico 0",
                  "value": "an0"
                },
                {
                  "label": "Analógico 1",
                  "value": "an1"
                },
                {
                  "label": "Analógico 2",
                  "value": "an2"
                },
                {
                  "label": "Analógico 3",
                  "value": "an3"
                },
                {
                  "label": "Proximio Warning",
                  "value": "proxwarn"
                },
                {
                  "label": "Proximio Crítico",
                  "value": "proxcrit"
                },
                {
                  "label": "Proximio Checkpoint",
                  "value": "pchkp"
                }
              ]
            },
            "validate": {
              "required": true
            },
            "key": "target",
            "type": "select",
            "input": true
          },
          {
            "label": "Horímetro",
            "tooltip": "Salvar valor atual do acumulativo das leituras na memória da placa.",
            "tableView": false,
            "defaultValue": false,
            "key": "save",
            "type": "checkbox",
            "input": true
          },
          {
            "label": "Trigger",
            "tooltip": "Quando a regra ativa-se, executar uma acção.",
            "tableView": false,
            "key": "trigger",
            "type": "checkbox",
            "input": true,
            "defaultValue": false
          },
          {
            "label": "Trigger Reverso",
            "tooltip": "Ao invés de o trigger se executar ao ativar a regra, ativar ao desativar.",
            "tableView": false,
            "defaultValue": false,
            "key": "reverse",
            "conditional": {
              "show": true,
              "when": "rules.trigger",
              "eq": "true"
            },
            "type": "checkbox",
            "input": true
          },
          {
            "label": "Acção",
            "widget": "choicesjs",
            "tooltip": "O qué deveria ativar o trigger.",
            "tableView": true,
            "data": {
              "values": [
                {
                  "label": "Relay 1",
                  "value": "0"
                },
                {
                  "label": "Relay 2",
                  "value": "1"
                },
                {
                  "label": "Buzzer",
                  "value": "2"
                }
              ]
            },
            "key": "action",
            "conditional": {
              "show": true,
              "when": "rules.trigger",
              "eq": "true"
            },
            "type": "select",
            "input": true
          }
        ]
      },
      {
        "type": "button",
        "label": "Submit",
        "key": "submit",
        "disableOnInvalid": true,
        "input": true,
        "tableView": false
      }
    ]
  },
  "license": "EULA",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode production --watch",
    "build-copy": "yarn build && (cat dist/bundle.js | pbcopy) && du -sh dist/*.js",
    "size": "npm run build && size-limit",
    "deploy": "node .scripts/deploy.js",
    "deploy-force": "node .scripts/deploy.js --force",
    "minor": "npm run build && bump minor --commit --tag --push --all",
    "release": "npm run build && bump major --commit --tag --push --all",
    "test": "jest --silent"
  },
  "browserslist": [
    "ie 6"
  ],
  "size-limit": [
    {
      "path": "dist/bundle.js",
      "limit": "100 kb",
      "gzip": false
    }
  ],
  "devDependencies": {
    "@babel/core": "7.18.9",
    "@babel/plugin-transform-arrow-functions": "7.18.6",
    "@babel/preset-env": "7.18.9",
    "@babel/preset-typescript": "7.18.6",
    "@jsdevtools/version-bump-prompt": "6.1.0",
    "@size-limit/preset-big-lib": "7.0.8",
    "@types/commander": "2.12.2",
    "@types/firebase": "3.2.1",
    "@types/jest": "28.1.6",
    "@types/lodash": "4.14.182",
    "@types/uuid": "8.3.4",
    "babel-loader": "8.2.5",
    "brotli-webpack-plugin": "1.1.0",
    "commander": "9.4.0",
    "compression-webpack-plugin": "10.0.0",
    "graphql": "16.5.0",
    "graphql-request": "4.3.0",
    "inquirer": "9.0.2",
    "jest": "28.1.3",
    "mobx-keystone": "0.69.6",
    "semver": "7.3.7",
    "size-limit": "7.0.8",
    "ts-loader": "9.3.1",
    "typed-emitter": "2.1.0",
    "typescript": "4.7.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0"
  },
  "dependencies": {
    "@fermuch/monoutils": "0.1.4",
    "@fermuch/telematree": "9.21.0",
    "cross-fetch": "3.1.5",
    "firebase": "9.9.1",
    "lodash": "4.17.21",
    "mobx": "6.6.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/private/jest/setup.ts"
    ]
  }
}
